<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.UserProfileFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/filledNameTextField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint=" Full Name ">

                <!--this is the actual edit text which takes the input-->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nameEdittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:autofillHints="name"
                    android:inputType="text"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <RadioGroup
                android:id="@+id/gender_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/filledNameTextField"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/male_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Male" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/female_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                   android:text="Female" />



            </RadioGroup>

            <TextView
                android:id="@+id/gender_error_text_view"
                android:layout_below="@id/gender_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="gone" />




            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/filledMobileNumberTextField"
                android:layout_below="@+id/gender_error_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Mobile Number">

                <!--this is the actual edit text which takes the input-->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mobileEdittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="name"
                    android:inputType="number"
                     />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/filledEmailTextField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/filledMobileNumberTextField"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Email Id">

                <!--this is the actual edit text which takes the input-->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="name"
                    android:inputType="text"
                   />

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/btnUpdateUserDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/filledEmailTextField"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_centerVertical="true"
                android:text="@string/UpdateUserDetails"
                app:shapeAppearance="@style/Rounded"
                />

            <Button
                android:id="@+id/cancelUpdateDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/filledEmailTextField"
                android:layout_toRightOf="@+id/btnUpdateUserDetails"
                android:layout_marginTop="24dp"
                android:layout_marginRight="40dp"
                android:layout_centerVertical="true"
                android:text="@string/cancel"
                app:shapeAppearance="@style/Rounded"
                />


            <View
                android:id="@+id/line12"
                android:layout_below="@+id/btnUpdateUserDetails"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_height="3dp"
                android:background="@color/purple_500" >


            </View>


            <TextView
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:id="@+id/aleradyRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line12"
                android:textFontWeight="@integer/material_motion_duration_long_1"
                android:text="Already Registered ? ">

            </TextView>

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/loginRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line12"
                android:layout_toRightOf="@+id/aleradyRegister"
                android:textColor="@color/purple_500"
                android:text="  Login ">

            </TextView>

            <!--    <Button-->
            <!--        android:id="@+id/btnregistercancel"-->
            <!--        android:layout_width="wrap_content"-->
            <!--        android:layout_height="wrap_content"-->
            <!--        android:layout_below="@+id/filledcnfrmPasswrdTextField"-->
            <!--        android:layout_marginTop="40dp"-->
            <!--        android:layout_marginLeft="40dp"-->
            <!--        android:layout_toRightOf="@id/btnregisterform"-->
            <!--        android:text="@string/cancel"-->
            <!--        />-->
        </RelativeLayout>
    </ScrollView>

</FrameLayout>